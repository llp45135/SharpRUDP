<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <targets>
    
    <target xsi:type="Console" name="c" />
    <target xsi:type="File" name="fc" fileName="${basedir}/${machinename} CLIENT.log" />
    <target xsi:type="File" name="fs" fileName="${basedir}/${machinename} SERVER.log" />

  </targets>

  <rules>
    <logger name="*" minlevel="Debug" writeTo="fc">
      <filters>
        <when condition="starts-with('${message}', '[C]')" action="Log" />
        <when condition="not starts-with('${message}', '[C]')" action="Ignore" />
      </filters>
    </logger>
    <logger name="*" minlevel="Debug" writeTo="fs">
      <filters>
        <when condition="starts-with('${message}', '[S]')" action="Log" />
        <when condition="not starts-with('${message}', '[S]')" action="Ignore" />
      </filters>
    </logger>
    <logger name="*" minlevel="Debug" writeTo="c" />
  </rules>
</nlog>